{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "outDir": "build",
    "jsx": "react",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "src/stories"]
}
