{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "build",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ES2020"]
  },
  "exclude": ["node_modules", "src/stories"]
}
